{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Components Catalog Schema",
  "description": "Validates YAML files that only contain data components for the PTIS architecture.",
  "type": "object",
  "required": ["metadata", "data_components"],
  "properties": {
    "metadata": { "$ref": "./metadata.schema.json" },
    "data_components": {
      "type": "array",
      "minItems": 1,
      "description": "List of data components in the public transportation information system",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "data_entities"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^component:\\d{3}$",
            "description": "Unique identifier for the data component (component:XXX)"
          },
          "name": { "type": "string", "minLength": 1 },
          "description": { "type": "string", "minLength": 1 },
          "data_entities": {
            "type": "array",
            "minItems": 1,
            "description": "Entity IDs managed/realized by this component",
            "items": { "type": "string", "pattern": "^data-entity:\\d{3}$" }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
