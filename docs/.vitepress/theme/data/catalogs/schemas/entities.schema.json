{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Entities Catalog Schema",
  "description": "Validates YAML files that only contain data entities for the PTIS architecture.",
  "type": "object",
  "required": ["metadata", "data_entities"],
  "properties": {
    "metadata": { "$ref": "./metadata.schema.json" },
    "data_entities": {
      "type": "array",
      "minItems": 1,
      "description": "List of data entities in the public transportation information system",
      "items": {
        "type": "object",
        "required": ["id", "name", "description"],
        "additionalProperties": false,
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^data-entity:\\d{3}$",
            "description": "Unique identifier for the data entity (data-entity:XXX)"
          },
          "name": { "type": "string", "minLength": 1 },
          "presence": { "type": "string", "enum": ["Required", "Optional", "Conditionally Required", "Conditionally Forbidden", "Recommended"] },
          "description": { "type": "string", "minLength": 1 },
          "attributes": {
            "type": "array",
            "minItems": 1,
            "items": {
              "type": "object",
              "required": ["id", "name", "type", "description"],
              "additionalProperties": false,
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^attribute:\\d{3}$",
                  "description": "Unique identifier for the attribute (attribute:XXX)"
                },
                "name": { "type": "string", "minLength": 1 },
                "type": {
                  "type": "string",
                  "enum": [
                    "String","Integer","Boolean","Date","DateTime","Float",
                    "Double","Long","UUID","JSON","Array","Object","Binary","Decimal"
                  ]
                },
                "description": { "type": "string", "minLength": 1 }
              }
            }
          }
        }
      }
    }
  },
  "additionalProperties": false
}
