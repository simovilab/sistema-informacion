{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Data Entity/Component Catalog Schema",
  "description": "JSON Schema for validating data entity/component catalog YAML files in the Public Transportation Information System architecture",
  "type": "object",
  "required": ["metadata", "data_entities", "data_components"],
  "properties": {
    "metadata": {
      "$ref": "./metadata.schema.json"
    },
    "data_entities": {
      "type": "array",
      "description": "List of data entities in the public transportation information system",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "attributes"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^data-entity:\\d{3}$",
            "description": "Unique identifier for the data entity following the pattern data-entity:XXX"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "The name of the data entity"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Brief description of what the data entity represents"
          },
          "attributes": {
            "type": "array",
            "items": {
              "type": "object",
              "required": ["id", "name", "type", "description"],
              "properties": {
                "id": {
                  "type": "string",
                  "pattern": "^attribute:\\d{3}$",
                  "description": "Unique identifier for the attribute following the pattern attribute:XXX"
                },
                "name": {
                  "type": "string",
                  "minLength": 1,
                  "description": "The name of the attribute"
                },
                "type": {
                  "type": "string",
                  "enum": [
                    "String",
                    "Integer",
                    "Boolean",
                    "Date",
                    "DateTime",
                    "Float",
                    "Double",
                    "Long",
                    "UUID",
                    "JSON",
                    "Array",
                    "Object",
                    "Binary",
                    "Decimal"
                  ],
                  "description": "Data type of the attribute"
                },
                "description": {
                  "type": "string",
                  "minLength": 1,
                  "description": "Description of what the attribute represents"
                }
              },
              "additionalProperties": false
            },
            "minItems": 1,
            "description": "List of attributes that define the entity structure"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "data_components": {
      "type": "array",
      "description": "List of data components in the public transportation information system",
      "items": {
        "type": "object",
        "required": ["id", "name", "description", "data_entities"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^data-component:\\d{3}$",
            "description": "Unique identifier for the data component following the pattern data-component:XXX"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "The name of the data component"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Description of the component's purpose and functionality"
          },
          "data_entities": {
            "type": "array",
            "items": {
              "type": "string",
              "pattern": "^data-entity:\\d{3}$"
            },
            "minItems": 1,
            "description": "List of data entity IDs that this component manages"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
