{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Organization/Actor Catalog Schema",
  "description": "JSON Schema for validating organization/actor catalog YAML files in the Public Transportation Information System architecture",
  "type": "object",
  "required": ["metadata", "organizations"],
  "properties": {
    "metadata": {
      "$ref": "./metadata.schema.json"
    },
    "organizations": {
      "type": "array",
      "description": "List of organizations in the public transportation information system",
      "items": {
        "type": "object",
        "required": [
          "id",
          "name",
          "description",
          "type",
          "contact",
          "website",
          "location",
          "parent_organization",
          "roles"
        ],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^organization:[0-9]{3}$",
            "description": "Unique identifier for the organization following the pattern organization:XXX"
          },
          "name": {
            "type": "string",
            "minLength": 1,
            "description": "The organization's full name"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Brief description of the organization's purpose"
          },
          "stakeholder": {
            "type": "string",
            "pattern": "^stakeholder:[0-9]{3}$",
            "description": "Type of stakeholder the organization represents"
          },
          "type": {
            "type": "string",
            "description": "Type of organization"
          },
          "contact": {
            "type": "string",
            "format": "email",
            "description": "Primary contact email for the organization"
          },
          "website": {
            "type": "string",
            "format": "uri",
            "description": "Organization's website URL"
          },
          "location": {
            "type": "string",
            "minLength": 1,
            "description": "Physical location or address of the organization"
          },
          "parent_organization": {
            "oneOf": [
              {
                "type": "null"
              },
              {
                "type": "string",
                "pattern": "^organization:[0-9]{3}$"
              }
            ],
            "description": "Parent organization ID if applicable, null for top-level organizations"
          },
          "roles": {
            "type": "array",
            "items": {
              "type": "string",
              "enum": [
                "Research",
                "Development",
                "Consulting",
                "Operation",
                "Regulation",
                "Planning",
                "Funding",
                "Technology Provider",
                "Service Provider",
                "Oversight",
                "Support",
                "Integration",
                "Maintenance"
              ]
            },
            "minItems": 1,
            "description": "List of roles the organization plays in the system"
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    }
  },
  "additionalProperties": false
}
